@inject LocService SharedLocalizer
@using Auth.Resources
@model Auth.Models.AccountViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = @SharedLocalizer.GetLocalizedHtmlString("FORGOT_YOUR_PASSWORD");
}

<div class="content-wrapper">
    <div class="content custom-scrollbar">
        <div id="forgot-password" class="p-8">
            <div class="form-wrapper md-elevation-8 p-8">
                <div class="logo bg-secondary">
                    <span>M</span>
                </div>
                <div class="title mt-4 mb-8">@ViewData["Title"]</div>
                <div class="description pt-2">
                    @SharedLocalizer.GetLocalizedHtmlString("FORGOT_YOUR_PASSWORD_ENTER_EMAIL")
                </div>
                <form name="forgotPasswordForm" asp-controller="Account" asp-action="ForgotPassword" method="post">
                    <div class="form-group mb-4">
                        <input asp-for="Email" type="email" class="form-control" id="resetPasswordFormInputEmail" aria-describedby="emailHelp" placeholder=" " required />
                        <label for="resetPasswordFormInputEmail"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>                    
                    <button type="submit" class="submit-button btn btn-block btn-secondary mt-8 mb-4 mx-auto" aria-label="FORGOT PASSWORD">
                        @SharedLocalizer.GetLocalizedHtmlString("SUBMIT")
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
