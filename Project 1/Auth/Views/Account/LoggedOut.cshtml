<div class="content-wrapper">
    <div class="content custom-scrollbar">
        <div id="forgot-password" class="p-8">
            <div class="form-wrapper md-elevation-8 p-8">
                <div class="logo bg-secondary">
                    <span>M</span>
                </div>
                <div class="title mt-4 mb-8">@SharedLocalizer.GetLocalizedHtmlString("LOGOUT_TEXT")</div>
                @if (Model.PostLogoutRedirectUri != null)
                {
                    <div class="description pt-2">
                        @SharedLocalizer.GetLocalizedHtmlString("LOGOUT_RETURN_TO")
                    </div>
                    <a href="@Model.PostLogoutRedirectUri" class="submit-button btn btn-block btn-secondary mt-8 mb-4 mx-auto" aria-label="LOGIN">
                        @Model.ClientName
                    </a>
                }
                @if (Model.SignOutIframeUrl != null)
                {
                    <iframe style="display:none" width="0" height="0" class="signout" src="@Model.SignOutIframeUrl"></iframe>
                }

            </div>
        </div>
    </div>
</div>
